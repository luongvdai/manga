@model IEnumerable<PRN231_API.Models.Page>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<!-- Thêm thư viện Select2 -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.1.0-rc.0/css/select2.min.css" rel="stylesheet" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.1.0-rc.0/js/select2.min.js"></script>
<nav class="navbar navbar-expand-lg navbar-light bg-light sticky-lg-top opacity-75">
    <div class="container">
        <a class="navbar-brand" href="#">One Punch man</a>

        <div>
            <ul class="navbar-nav ms-auto">
                <li class="nav-item">
                    <button class="btn btn-danger">
                        <i class="ti ti-chevron-left"></i>
                    </button>
                </li>
                <li class="nav-item mx-2">
                    <select class="form-select" id="selectChapter">
                        @foreach (var chapter in ViewBag.Chapters)
                        {
                            <option>
                          Chương  @chapter.ChapterNumber
                        </option>
                        }
                    </select>
                </li>
                <li class="nav-item">
                    <button class="btn btn-danger">
                        <i class="ti ti-chevron-right"></i>
                    </button>
                </li>
            </ul>
        </div>
        <div id="loadFollow">
          <button id="follow" class="btn btn-success">
            <i class="ti ti-bookmark"></i>
            Theo dõi
          </button>
          <button id="unfollow" class="btn btn-outline-danger text-wrap">
            <i class="ti ti-x"></i>Bỏ theo dõi
          </button>
          </div>
    </div>
</nav>
<div class="container">
    <h1 class="text-center my-5">Chapter 1 - Truyện tranh</h1>

    <div class="d-flex flex-column align-items-center align-content-center gap-2">
        @foreach(var item in @Model){
                <div class="page" style="border: 1px solid black;">
                  @{
                        string imgData = Convert.ToBase64String(item.Image);
                    }
                    <img src="@string.Format("data:image/jpeg;base64,{0}", imgData)"
                 class="img-fluid"
                 alt=""
                 style=" max-width: 100%;
        height: auto;" />
        </div>
        }
    </div>
</div>
<script>
    // Khởi tạo Select2 cho thẻ select
    $('#selectChapter').select2({
        // Giới hạn độ cao của danh sách tùy chọn
        dropdownCssClass: 'select2-dropdown',
    });
</script>